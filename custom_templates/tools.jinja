{% macro is_light_white(entity_id) %} 
{%- if expand(entity_id) | selectattr('attributes.hs_color', 'color_temp') |  map(attribute='entity_id') -%}
  true
{%- elif expand(entity_id) | selectattr('attributes.hs_color', 'color_temp_kelvin') |  map(attribute='entity_id') -%}
  true
{%- elif  expand(entity_id) | selectattr('attributes.hs_color', 'defined') |  map(attribute='entity_id') -%} {# Check if 'hs_color' is defined #}
  {%- if expand(entity_id) | expand(entity_id)| map(attribute='attributes.hs_color.0') | first  | float >= 8  and expand(entity_id) | expand(entity_id)| map(attribute='attributes.hs_color.0') | first  | float < 60 and expand(entity_id) | expand(entity_id)| map(attribute='attributes.hs_color.1') | first  | float < 63  -%} {# Continue if hue is over a certain white-ish color #}
      true
  {%- else -%}
      false
  {% endif %}
{%- else -%}
  false
{% endif %}
{% endmacro %}